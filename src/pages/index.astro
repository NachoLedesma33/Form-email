---
import Layout from '../layouts/Layout.astro';

---

<Layout title="Welcome to an email sender.">
	<main  class="p-6">
		<form
			action="https://formspree.io/f/xkgwyvjw"
  			method="POST"
			class="max-w-md mx-auto p-8 bg-gradient-to-r from-gray-800 via-gray-900 to-black rounded-2xl shadow-2xl">
			<h2 class="text-3xl font-bold mb-6 text-indigo-400 text-center">Contact Us</h2>
			
			<div class="mb-5 relative">
			  <label for="subject" class="block text-sm font-medium text-indigo-300 mb-2">Subject</label>
			  <div class="flex items-center bg-gray-800 rounded-md">
				<span class="px-3 text-indigo-500">
				  <i class="fas fa-pencil-alt"></i>
				</span>
				<input type="text" id="subject" name="name" required
					   class="w-full px-3 py-2 bg-transparent border-none text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Enter subject">
			  </div>
			</div>
			
			<div class="mb-5 relative">
			  <label for="recipient" class="block text-sm font-medium text-indigo-300 mb-2">Recipient Email</label>
			  <div class="flex items-center bg-gray-800 rounded-md">
				<span class="px-3 text-indigo-500">
				  <i class="fas fa-envelope"></i>
				</span>
				<input type="email" id="recipient" name="name" required
					   class="w-full px-3 py-2 bg-transparent border-none text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Enter email">
			  </div>
			</div>
			
			<div class="mb-5 relative">
			  <label for="sender" class="block text-sm font-medium text-indigo-300 mb-2">Your Name</label>
			  <div class="flex items-center bg-gray-800 rounded-md">
				<span class="px-3 text-indigo-500">
				  <i class="fas fa-user"></i>
				</span>
				<input type="text" id="sender" name="name" required
					   class="w-full px-3 py-2 bg-transparent border-none text-white focus:outline-none focus:ring-2 focus:ring-indigo-500" placeholder="Enter your name">
			  </div>
			</div>
			
			<div class="mb-6 relative">
			  <label for="message" class="block text-sm font-medium text-indigo-300 mb-2">Message</label>
			  <textarea id="message" name="name" rows="4" required
						class="w-full px-3 py-2 bg-gray-800 border-none rounded-md text-white focus:outline-none focus:ring-2 focus:ring-indigo-500 resize-none"
						placeholder="Type your message"></textarea>
			</div>
			
			<button type="submit"
					class="w-full bg-indigo-600 text-white py-3 rounded-full hover:bg-indigo-700 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-black transition duration-300 transform hover:-translate-y-1">
			  Send Message
			</button>
		  </form>
		  
	</main>
</Layout>


